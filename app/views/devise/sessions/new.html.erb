<% content_for :title, "Logowanie" %>
<div class="container">
  <div class="row" align="center">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

<h1 class=page-header>Logowanie</h1>

    <div class="jumbotron" align="center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form class="form-signin">
          <div class="input-group">
            <span class="input-group-addon">Użytkownik</span>
              <%= f.text_field :email, placeholder:"Nazwa użytkownika", type:"text", required: true, autofocus: true, class:"form-control" %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon">Hasło</span>
              <%= f.text_field :password, placeholder:"Hasło", type:"password", required: true, class:"form-control" %>
          </div>
          <br>
          <%= f.submit "Zaloguj", class:"btn btn-default btn-primary" %>
        </form>
      <% end %>
    </div>
  </div>
  <div class="col-md-3"> </div>
</div>

</div>
