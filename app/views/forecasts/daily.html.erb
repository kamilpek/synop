<% content_for :title, "Prognozy dzienne" %>

<div class="container">

<div class="page-header">
  <div class="pull-left">
  <h2>Lista prognoz na dzień <%= @date.strftime("%d.%m.%Y") %></h2>
  </div>
  <div class="pull-right">
  <h3 class="text-right">
    <%= link_to daily_forecast_path(date: @date - 1.day), class: "btn btn-info" do %>
      <i> Poprzedni Dzień</i>
    <% end %>
    <%= link_to daily_forecast_path(date: @date + 1.day), class: "btn btn-info" do %>
      <i> Następny Dzień</i>
    <% end %>
   </h3>
  </div>
  <div class="clearfix"></div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Godzina</th>
      <th>Akcje</th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour %></td>
        <td><%= link_to 'Przejdź do godziny', hourly_forecast_path(1, hour: hour, date: @date), class:"btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>
