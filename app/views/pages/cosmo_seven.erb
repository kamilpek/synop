<% content_for :title, "COSMO 7" %>

<div class="container-fluid" allign="center" id="home_test">
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title"><%= @name %></h5>
            <div id="radars_indicators" class="carousel" data-ride="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <%= link_to (image_tag @models[0], class:"radar-img"), @models[0], class:"d-block w-100", alt:"TOP_0" %>
                    </div>
                    <% @models.drop(1).each_with_index do |model, index| %>
                    <div class="carousel-item">
                        <%= link_to (image_tag model, class:"radar-img"), model, class:"d-block w-100", alt:"TOP_#{index+1}" %>
                    </div>
                    <% end %>
                </div>
                <a class="carousel-control-prev" href="#radars_indicators" role="button" data-slide="prev">
                    <i class="fa fa-arrow-left carousel-arrows"></i>
                    <span class="sr-only">Poprzedni</span>
                </a>
                <a class="carousel-control-next" href="#radars_indicators" role="button" data-slide="next">
                    <i class="fa fa-arrow-right carousel-arrows"></i>
                    <span class="sr-only">NastÄ™pny</span>
                </a>
            </div>
        </div>
    </div>
</div>