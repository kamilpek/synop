<% content_for :title, "Mapa prognoz" %>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <%= link_to "Mapa Pomiarów", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa Prognoz", pages_forecast_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa METAR", pages_metar_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa jakości powietrza", pages_gios_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div style='height: 750px;'>
        <div id="sidebar_builder" style='width: 100%; height: 100%;'></div>
        <%= render "multimap_forecast" %>
      </div><hr>
      <p align="center">Prognoza z godziny: <%= @hour %>:00 CEST dnia <%= @date %>.</p>
    </div>
    <p><%= link_to "Źródło danych: yr.no", "http://yr.no/", class:"btn btn-sm btn-outline-primary" %></p>
  </div>
</div>
