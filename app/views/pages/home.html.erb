<% content_for :title, "Mapa pomiarów" %>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <%= link_to "Mapa Pomiarów", root_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa Prognoz", pages_forecast_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa METAR", pages_metar_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mapa jakości powietrza", pages_gios_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Radar", pages_radars_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "SAFIR", pages_safir_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div style='height: 750px;'>
        <div id="sidebar_builder" style='width: 100%; height: 100%;'></div>
        <%= render "multimap" %>
      </div><hr>
      <p align="center">Data i godzina ostatniego pomiaru: <%= @date %>; <%= @hour %>:00 UTC.</p>
    </div>
    <p><%= link_to "Źródło danych: imgw.pl", "http://www.imgw.pl/", class:"btn btn-sm btn-outline-primary" %></p>
  </div>
</div>
